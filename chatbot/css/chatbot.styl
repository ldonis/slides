@require Lesli--load('lesli')

@require '../../Template/css/slides'

header
	background-image linear-gradient(to bottom, rgba(255,255,255,.75), rgba(255,255,255,.75)), url(Lesli--image('chatbot.jpg'))
	background-repeat no-repeat
	background-position center
	background-size cover
	
	img
		margin-bottom 20px
		width 190px


section
	background-repeat no-repeat
	background-position center
	background-size cover
	text-align center
	
	h3
	p
		text-shadow 0px 0px 5px #fff
		
	hr
		border-top 1px solid darken($color-gray, 20)


section.chat
	
	.container
		padding 1rem
		border-radius 5px
		background-color rgb(240,240,240)
		border 1px solid rgb(220,220,220)

		p
			width 100%
			margin-bottom 15px
		
		span
			padding 5px 15px
			border-radius 15px

		.question
			text-align right
			span
				background-color #99c0ff
				
		.response
			text-align left
			span
				background-color #72ffbd