@require 'lesli/'


// * Carga modulos de Lesli CSS
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
@require Lesli--load('base')
@require Lesli--load('grid')


// * Inclulding standards 
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
@require 'standard.styl'


// * Fuentes
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
@font-face
    font-family 'opensans300'
    src url('https://cdn.lesli.tech/assets/fonts/opensans/opensans-300.ttf') format('truetype')
    font-weight 300

@font-face
    font-family 'roboto100'
    src url('https://cdn.lesli.tech/assets/fonts/roboto/roboto-100.woff') format('woff')
    font-weight 100

@font-face
    font-family 'pinyon'
    src url('https://cdn.lesli.tech/assets/fonts/pinyon/pinyon.woff') format('woff')
    font-weight 100
    

// * Base styles
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
lesli-base()


// * Global dom styles
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
*
    font-family $font-family-body
    color $color-black

html
body
    font-size 1.2rem

