// * Reveal framework
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~
@require 'reveal.css'


// * Base styles
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
lesli-base()


// * Global dom styles
// * ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~  ~·~ 
*
    font-family $font-family-body
    color $color-black-mate

html
body
    font-size 1.2rem


// Title
.reveal

    h1
        font-size 5rem

    h2
        font-size 4rem

    h3
        font-size 3rem

    h4
        font-size 2.0rem


    // Separador
    hr
        height 2px
        margin 10px auto
        background-color $color-gray-dark

    p
        margin-top 5px



section.thank-you
    img
        width 175px

    h5
        font-size 1.6rem
        margin-top 15px