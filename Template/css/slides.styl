@require Lesli--load('helper')


header
section
footer
	lesli-helper-center('vertical')
	height 100vh
	margin 0 auto


header

	hr
		width 80%
		margin-bottom .8rem
		border-top-color $color-blue

#about
	
	h1
		font-size 4rem
		font-family $font-family-special
		
	hr
		width 80%
		margin 0px auto 10px
		
	h2
		font-size 2rem
		font-family $font-family-title

#agenda
	
	h3
		width 320px
		text-align center
		margin-bottom 10px
		border-bottom 1px solid $color-gray
		
	ul
		li
			margin-bottom 3px
			
			ul
				padding-left 50px

footer

	h2
		font-size 3.5rem
		font-family $font-family-title
		
	hr
		width 75%
		margin 10px auto
		
	p.socialmedia
		margin-top 25px
		span
			margin 0 20px


div.socialmedia
	width 100%
	display flex
	justify-content space-between
	padding 0 25px 25px
	font-size 1.3rem
	
	


hr
	width 100%
	display block
	margin 0 auto
	border-top 1px solid $color-gray
	border-bottom 0
